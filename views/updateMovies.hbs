
    <h1>Update Movie</h1>

    <form class="form-container" action="/updateMovie/{{_id}}" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <label for="plot">Plot:</label>
        <textarea id="plot" name="plot" rows="4" cols="50">{{plot}}</textarea><br>

        <label for="genres">Genres:</label>
        <input type="text" id="genres" name="genres" value="{{genres}}"><br>

        <label for="runtime">Runtime:</label>
        <input type="number" id="runtime" name="runtime" value="{{runtime}}"><br>

        <label for="rated">Rated:</label>
        <input type="text" id="rated" name="rated" value="{{rated}}"><br>

        <label for="cast">Cast:</label>
        <input type="text" id="cast" name="cast" value="{{cast}}"><br>

        <label for="poster">Poster URL:</label>
        <input type="text" id="poster" name="poster" value="{{poster}}"><br>

        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="{{title}}"><br>

        <label for="fullplot">Full Plot:</label>
        <textarea id="fullplot" name="fullplot" rows="4" cols="50">{{fullplot}}</textarea><br>

        <label for="languages">Languages:</label>
        <input type="text" id="languages" name="languages" value="{{languages}}"><br>

        <label for="released">Released:</label>
        <input type="date" id="released" name="released" value="{{released}}"><br>

        <label for="directors">Directors:</label>
        <input type="text" id="directors" name="directors" value="{{directors}}"><br>

        <label for="writers">Writers:</label>
        <input type="text" id="writers" name="writers" value="{{writers}}"><br>

        <label for="awardswins">Awards Wins:</label>
        <input type="number" id="awardswins" name="awardswins" value="{{awardswins}}"><br>

        <label for="awardsnominations">Awards Nominations:</label>
        <input type="number" id="awardsnominations" name="awardsnominations" value="{{awardsnominations}}"><br>

        <label for="awardstext">Awards Text:</label>
        <input type="text" id="awardstext" name="awardstext" value="{{awardstext}}"><br>

        <label for="lastupdated">Last Updated:</label>
        <input type="date" id="lastupdated" name="lastupdated" value="{{lastupdated}}"><br>

        <label for="year">Year:</label>
        <input type="number" id="year" name="year" value="{{year}}"><br>

        <label for="imdb.rating">IMDB Rating:</label>
        <input type="number" id="imdbrating" name="imdbrating" value="{{imdbrating}}"><br>

        <label for="imdbvotes">IMDB Votes:</label>
        <input type="number" id="imdbvotes" name="imdbvotes" value="{{imdbvotes}}"><br>

        <label for="imdbid">IMDB ID:</label>
        <input type="number" id="imdbid" name="imdbid" value="{{imdbid}}"><br>

        <label for="countries">Countries:</label>
        <input type="text" id="countries" name="countries" value="{{countries}}"><br>

        <label for="type">Type:</label>
        <input type="text" id="type" name="type" value="{{type}}"><br>

        <label for="tomatoes.viewer.rating">Tomatoes Viewer Rating:</label>
        <input type="number" id="tomatoesviewerrating" name="tomatoesviewerrating" value="{{tomatoesviewerrating}}"><br>

        <label for="tomatoesviewernumreviews">Tomatoes Number of Reviews:</label>
        <input type="number" id="tomatoesviewernumreviews" name="tomatoesviewernumreviews" value="{{tomatoesviewernumreviews}}"><br>

        <label for="tomatoes.viewer.meter">Tomatoes Meter:</label>
        <input type="number" id="tomatoesviewermeter" name="tomatoesviewermeter" value="{{tomatoesviewermeter}}"><br>

        <label for="tomatoesproduction">Tomatoes Production:</label>
        <input type="text" id="tomatoesproduction" name="tomatoesproduction" value="{{tomatoesproduction}}"><br>

        <label for="tomatoeslastupdated">Tomatoes Last Updated:</label>
        <input type="date" id="tomatoeslastupdated" name="tomatoeslastupdated" value="{{tomatoeslastupdated}}"><br>

        <label for="num_mflix_comments">Number of Comments:</label>
        <input type="number" id="num_mflix_comments" name="num_mflix_comments" value="{{num_mflix_comments}}"><br>

        <input class="my-button" type="submit" value="Update Movie">
    </form>

